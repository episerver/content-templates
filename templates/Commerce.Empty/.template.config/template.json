{
  "$schema": "http://json.schemastore.org/template",
  "author": "Episerver AB",
  "sourceName": "Commerce.Empty",
  "classifications": [ "Web" ],
  "identity": "EPiServer.Templates.Commerce.Empty",
  "name": "Optimizely Commerce empty",
  "shortName": "epi-commerce-empty",
  "description": "Empty web application with Optimizely CMS and Commerce",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!enablelDocker)",
          "exclude": [
            "Directory.Build.props",
            "docker-compose.yml",
            "Docker/**/*"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "enablelDocker": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Enable Docker support"
    },
    "saPassword": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "Qwerty12345!",
      "description": "Password for the SA database account",
      "replaces": "Qwerty12345!"
    }
  }
}
